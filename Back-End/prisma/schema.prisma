generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model cliente {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user String
  email String
  senha String
  status Boolean
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("clientes")
}